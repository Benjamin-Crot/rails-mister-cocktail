<div class = "container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <%= @cocktail.name %>

  </div>
  <h3>Ingedrients</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "", dose_path(dose), method: :delete, data: {:confirm => 'Are you sure?'}, :class => "far fa-trash-alt" %>
    </li>
    <% end %>
  </ul>


  <div>
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail, @dose), class: "btn btn-gradient" %>
  </div>
</div>

